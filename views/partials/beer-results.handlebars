<div class="row column">
  <p class="lead">Your Belly's Results:</p>
</div>
<div class="row small-up-1 medium-up-2 large-up-3" id="beer-container">
  {{#each breweries}}
  <div class="column">
    <div class="callout">
      <a class="lead bar-link" id={{id}}>{{name}}</a>
      <p class="subheader">Type: {{brewery_type}}</p>
      <p>Address: {{street}}</p>
      <p>Number: {{phone}}</p>
      <a href="{{website_url}}" target="_blank">Website</a>
    </div>
  </div>
  {{/each}}
</div>